@model CateringService.Models.VehicleCapacity
@{
    ViewData["Title"] = "Update Capacity";
}
<h2>Update Vehicle Capacity</h2>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">@ViewBag.Error</div>
}
@if (ViewBag.Message != null)
{
    <div class="alert alert-success">@ViewBag.Message</div>
}

<form method="post">
    <div class="form-group">
        <label for="Capacity">Capacity</label>
        <input type="number" class="form-control" id="Capacity" name="Capacity" value="@Model.Capacity" step="0.1" required />
    </div>
    <button type="submit" class="btn btn-primary">Update</button>
</form>
